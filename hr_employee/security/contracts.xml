<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="contracts_group_manage" model="res.groups">
        <field name="name">Manage Contracts</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('contracts.contracts_group_manage'))]"/>
    </record>
    <record id="contracts_group_personnel" model="res.groups">
        <field name="name">Personnel Contracts</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('contracts.contracts_group_personnel'))]"/>
    </record>
    <record id="contracts_group_staff" model="res.groups">
        <field name="name">Staff Contracts</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('contracts.contracts_group_staff'))]"/>
    </record>

    <record model="ir.rule" id="employee_access_contract_enterprise">
        <field name="name">Contract Enterprise</field>
        <field name="model_id" ref="model_contract_enterprise"/>
        <field name="groups" eval="[(6, 0, [ref('contracts_group_manage')])]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
        <field name="perm_write" eval="False"/>
    </record>
</odoo>
